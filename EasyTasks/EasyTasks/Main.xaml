                                        <GradientStop Color="#FF082364" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <Button Content="+" Width="90" Height="92" Margin="85,302,26,0" Grid.Column="2" VerticalAlignment="Top" Name="btnMais" Click="btnMais_Click_1">
