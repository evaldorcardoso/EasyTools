                                <ColumnDefinition Width="23" />
                                <ColumnDefinition Width="196" />
                                <ColumnDefinition Width="201" />
                            </Grid.ColumnDefinitions>
                            <Button Content="C" Height="90" Margin="10,84,19,324" d:LayoutOverrides="HorizontalAlignment" Name="btnLimpar" Click="btnLimpar_Click" Grid.ColumnSpan="2">
