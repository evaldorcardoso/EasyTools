                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <Button Content="9" Width="90" Height="90" Margin="-9,158,120,250" Grid.Column="2" d:LayoutOverrides="GridBox" Name="btnNove" Click="btnNove_Click">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
