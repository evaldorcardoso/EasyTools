                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <Button Content="4" Width="90" Height="90" Margin="-13,232,119,176" Grid.Column="1" d:LayoutOverrides="GridBox" Name="btnQuatro" Click="btnQuatro_Click">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
