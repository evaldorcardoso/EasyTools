                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="#FF082364" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <Button Content="," Width="90" Height="90" Margin="-10,376,121,32" Grid.Column="2" Name="btnVirgula" Click="btnVirgula_Click" d:LayoutOverrides="GridBox">
