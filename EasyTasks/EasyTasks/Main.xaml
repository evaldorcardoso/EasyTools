                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="#FF082364" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <TextBox Text="0" Margin="10,30,26,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="3" Foreground="#FF0E0101" Height="70" Background="White" Name="txtTela">
                                <TextBox.SelectionBackground>
                                    <LinearGradientBrush EndPoint="0.469,0.785" StartPoint="0.469,0.278">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="#FFE24444" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBox.SelectionBackground>
                            </TextBox>
                            <Path Grid.Column="1" Data="M148,67" Fill="#FFF4F4F5" HorizontalAlignment="Right" Height="0" Margin="0,67,71,0" Stretch="Fill" Stroke="Black" UseLayoutRounding="False" VerticalAlignment="Top" Width="0"/>
                            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="8,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Name="txtbAcao" RenderTransformOrigin="0.579,-0.222"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </controls:PanoramaItem>

            <!--Panorama item 2-->
            <controls:PanoramaItem Header="peso ideal">
                <Grid x:Name="Con" Margin="12,0,12,0">
                    
                    <ScrollViewer>
                        <Grid>
                	<TextBlock Margin="6,204,157,0" TextWrapping="Wrap" FontSize="21.333" VerticalAlignment="Top"><Run Text="Informe a sua altura"/><Run Text="(m"/><Run Text="t"/><Run Text=")"/><Run Text=":"/></TextBlock>
                	<TextBox InputScope="Number" HorizontalAlignment="Right" Margin="0,171,35,0" TextWrapping="Wrap" Text="" Width="120" Name="txtAltura" VerticalAlignment="Top"/>
                	<TextBlock Margin="8,253,155,0" TextWrapping="Wrap" FontSize="21.333" VerticalAlignment="Top"><Run Text="Informe o seu peso"/><Run Text="(Kg)"/><Run Text=":"/></TextBlock>
                	<TextBox InputScope="Number" HorizontalAlignment="Right" Margin="0,228,35,198" TextWrapping="Wrap" Text="" d:LayoutOverrides="Height" Width="120" Name="txtPeso"/>
                	<TextBlock HorizontalAlignment="Left" Margin="20,0,0,11" TextWrapping="Wrap" VerticalAlignment="Bottom" Name="txtbPesoIdeal" FontSize="21.333" Text="" Foreground="#FFF52222"/>
                    <Button Content="Calcular" Height="90" HorizontalAlignment="Left" Margin="74,350,0,0" Name="btnCalcular" VerticalAlignment="Top" Width="247" Click="btnCalcular_Click">
                    	<Button.Background>
                    		<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    			<GradientStop Color="Black" Offset="0"/>
                    			<GradientStop Color="#FF082364" Offset="1"/>
                    		</LinearGradientBrush>
                    	</Button.Background>
                    </Button>
                    <TextBlock Height="171" Margin="19,26,-2,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Left" Foreground="#FF19E7E7" FontSize="18" Width="379" Name="txtbInformacao" ><Run Text="            Calcule o seu Índice de Massa Corporal (IMC) de forma rápida. Entretanto esse aplicativo não leva em conta vários fatores como musculosidade"/><Run Text=", idade"/><Run Text=" e muitos outros. Portanto deve ser usado apenas como uma ferramenta satisfatória para medir o índice de massa corporal."/></TextBlock>
                    
                    <RadioButton Content="Feminino" Height="72" HorizontalAlignment="Left" Margin="219,294,0,0" Name="rdbFeminino" VerticalAlignment="Top" Foreground="#FF37AC47" Background="#FF2BA246" />
                    <RadioButton Content="Masculino" Height="72" HorizontalAlignment="Left" Margin="8,295,0,0" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment" BorderBrush="#FFC7D900" Foreground="#FFFBE60C" Background="#FFFBE60C" Name="rdbMasculino" IsChecked="True" />
                    <TextBlock HorizontalAlignment="Left" Margin="8,283,0,180" TextWrapping="Wrap" Text="Sexo:" FontSize="24"/>
                            <Image Height="46" HorizontalAlignment="Left" Margin="9,4,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="49" Source="65.png"/>
                        </Grid>
                    </ScrollViewer>
                    
                </Grid>
